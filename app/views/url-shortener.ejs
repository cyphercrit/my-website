<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/url-shortener-styles.css?=2.0">
    <title>URL Shortener</title>
</head>
<body>
    <h1>URL Shortener</h1>
    <div class="input">
        <form id="shorten-form">
            <input type="text" id="url-input" placeholder="Enter URL to shorten" required>
            <button type="submit">Shorten</button>
        </form>
        <div id="output-area" class="output-container" style="display: none;">
            <div id="shortened-url" class="output-box"></div>
            <button id="copy-btn" class="copy-btn">Copy</button>
        </div>
    </div>

    <footer>
        <p>&copy; 2024 Caden Jurkovski.</p>
    </footer>

    <script>
        document.getElementById('shorten-form').addEventListener('submit', async (event) => {
            event.preventDefault();
            const url = document.getElementById('url-input').value;
            try {
                const response = await fetch('/projects/url-shortener/shorten', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ url })
                });
                const data = await response.json();
                if (response.ok) {
                    document.getElementById('shortened-url').textContent = `Shortened URL: https://short.jurkovski.com/${data.short_url}`;
                } else {
                    document.getElementById('shortened-url').textContent = `Error: ${data.error}`;
                }
            } catch (error) {
                document.getElementById('shortened-url').textContent = 'Error: Failed to shorten URL';
            }
        });
    </script>
</body>
</html>